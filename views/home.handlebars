<h1>Welcome To Online Dating</h1>
{{#if user}}
<p>You are logged in..</p>
{{else}}
<div class="row">
    <div class="col-sm-4">
        <h1 class="center">
            <a href="/auth/facebook">
                <button type="button" class="btn btn-primary btn-lg">Login With Facebook</button>
            </a>
        </h1>

        <h1 class="center">
            <a href="/auth/google">
                <button type="button" class="btn btn-danger btn-lg">Login With Google</button>
            </a>
        </h1>
        <p class="center">OR</p>
        <form action="/login" method="POST">
            {{#each success}}
            <p class="green">{{text}}</p>
            {{/each}}
            {{#each errors}}
            <p class="red">{{text}}</p>
            {{/each}}
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <a href="/newAccount">Need Account?</a>
    </div>
</div>
{{/if}}